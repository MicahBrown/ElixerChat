<%= form_for @changeset, @action, [style: "margin: 0;"], fn _ -> %>
  <%= if false && @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= submit Phoenix.HTML.raw("<i class='fa fa-plus-circle'></i> Start Chat"), class: "control-button" %>
<% end %>
